<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android" android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
 
         <TabWidget android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs" />
 
         <FrameLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent" >
 
            <RelativeLayout
    			android:id="@+id/tab1"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:orientation="vertical" >
            	<LinearLayout
    				android:id="@+id/pantallasimulacio"
    				android:layout_width="fill_parent"
    				android:layout_marginTop="30dip"
    				android:layout_height="300dp" />
				<LinearLayout
    				android:id="@+id/LinearLayout02"
    				android:layout_width="fill_parent"
    				android:layout_height="wrap_content"
    				android:layout_below="@+id/pantallasimulacio">
    				<TextView
					android:id="@+id/show_plants"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="" />
    				
				</LinearLayout>
				<LinearLayout
    				android:layout_below="@+id/pantallasimulacio"
    				android:orientation="vertical"
    				android:layout_width="fill_parent"
    				android:id="@+id/layout_ad"
    				android:layout_height="wrap_content" />
			</RelativeLayout>
            
          	<LinearLayout
				android:id="@+id/tab2"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/rain_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Rain Grow Ratio" />
				<EditText
					android:id="@+id/rain_edit1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/rain_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Rain Duration" />
				<EditText
					android:id="@+id/rain_edit2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/rain_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Rain Chances" />
				<EditText
					android:id="@+id/rain_edit3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/grow_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Grow Ratio" />
				<EditText
					android:id="@+id/grow_edit1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/grow_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Near Grow Ratio" />
				<EditText
					android:id="@+id/grow_edit2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/plants_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Update" 
					/>
        	</LinearLayout>
        	
          	<LinearLayout
				android:id="@+id/tab3"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/race1_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Grow Ratio" />
				<EditText
					android:id="@+id/race1_edit1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race1_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Eficiency" />
				<EditText
					android:id="@+id/race1_edit2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race1_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Max Age" />
				<EditText
					android:id="@+id/race1_edit3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/race1_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Update" 
					/>
        	</LinearLayout>
        	<LinearLayout
				android:id="@+id/tab4"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/race2_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Grow Ratio" />
				<EditText
					android:id="@+id/race2_edit1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race2_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Eficiency" />
				<EditText
					android:id="@+id/race2_edit2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race2_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Max Age" />
				<EditText
					android:id="@+id/race2_edit3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/race2_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Update" 
					/>
        	</LinearLayout>
 
         </FrameLayout>
    </LinearLayout>
 
</TabHost>
