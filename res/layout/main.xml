<?xml version="1.0" encoding="utf-8"?>
<TabHost 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
      	<TabWidget 
      	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:id="@android:id/tabs" />
      	<!-- Begining of tabs -->
      	<FrameLayout 
      	    android:layout_width="match_parent"
           	android:layout_height="match_parent"
       		android:id="@android:id/tabcontent" >
       		<!-- First tab -->
            <RelativeLayout
    			android:id="@+id/tab1"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:background="@drawable/splashscreen"
    			android:orientation="vertical" >
            	<LinearLayout
    				android:id="@+id/pantallasimulacio"
    				android:layout_width="fill_parent"
    				android:layout_marginTop="30dip"
    				android:layout_height="300dp" />
				<LinearLayout
    				android:id="@+id/LinearLayout02"
    				android:layout_width="fill_parent"
    				android:layout_height="wrap_content"
    				android:layout_below="@+id/pantallasimulacio">
    				<TextView
						android:id="@+id/show_info"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:gravity="center"
						android:text="" />		
				</LinearLayout>
				<LinearLayout
    				android:layout_below="@+id/pantallasimulacio"
    				android:orientation="vertical"
    				android:layout_width="fill_parent"
    				android:id="@+id/layout_ad"
    				android:layout_height="wrap_content" />
			</RelativeLayout>
            <!-- Second tab -->
          	<LinearLayout
				android:id="@+id/tab2"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:background="@drawable/splashscreen"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/grow_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/grow_txt1" />
				<EditText
					android:id="@+id/grow_edit1"
					android:hint="@string/grow_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/grow_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/grow_txt2" />
				<EditText
					android:id="@+id/grow_edit2"
					android:hint="@string/grow_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/rain_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/rain_txt1" />
				<EditText
					android:id="@+id/rain_edit1"
					android:hint="@string/rain_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/rain_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/rain_txt2" />
				<EditText
					android:id="@+id/rain_edit2"
					android:hint="@string/rain_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/rain_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/rain_txt3" />
				<EditText
					android:id="@+id/rain_edit3"
					android:hint="@string/rain_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/plants_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/update" 
					/>
        	</LinearLayout>
        	<!-- Third tab -->
          	<LinearLayout
				android:id="@+id/tab3"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:background="@drawable/splashscreen"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/race1_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/race_txt1" />
				<EditText
					android:id="@+id/race1_edit1"
					android:hint="@string/race_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race1_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/race_txt2" />
				<EditText
					android:id="@+id/race1_edit2"
					android:hint="@string/race_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race1_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/race_txt3" />
				<EditText
					android:id="@+id/race1_edit3"
					android:hint="@string/race_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race1_txt4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/race_txt4" />
				<EditText
					android:id="@+id/race1_edit4"
					android:hint="@string/race_txt4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race1_txt5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/race_txt5" />
				<EditText
					android:id="@+id/race1_edit5"
					android:hint="@string/race_txt5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/race1_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/update" 
					/>
        	</LinearLayout>
        	<!-- Fourth tab -->
        	<LinearLayout
				android:id="@+id/tab4"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:background="@drawable/splashscreen"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/race2_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/race_txt1" />
				<EditText
					android:id="@+id/race2_edit1"
					android:hint="@string/race_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race2_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/race_txt2" />
				<EditText
					android:id="@+id/race2_edit2"
					android:hint="@string/race_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race2_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/race_txt3" />
				<EditText
					android:id="@+id/race2_edit3"
					android:hint="@string/race_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race2_txt4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/race_txt4" />
				<EditText
					android:id="@+id/race2_edit4"
					android:hint="@string/race_txt4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/race2_txt5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/race_txt5" />
				<EditText
					android:id="@+id/race2_edit5"
					android:hint="@string/race_txt5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/race2_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/update" 
					/>
        	</LinearLayout>
        	<!-- Fifth tab -->
        	<LinearLayout
				android:id="@+id/tab5"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:background="@drawable/splashscreen"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/helptext"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/textinfo" />
        	</LinearLayout>
  		</FrameLayout>
   		<!-- End of tabs -->
 	</LinearLayout>
</TabHost>
