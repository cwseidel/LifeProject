<?xml version="1.0" encoding="utf-8"?>
<TabHost 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
      	<TabWidget 
      	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:id="@android:id/tabs" />
      	<!-- Begining of tabs -->
      	<FrameLayout 
      	    android:layout_width="match_parent"
           	android:layout_height="match_parent"
       		android:id="@android:id/tabcontent" >
       		<!-- First tab -->
            <RelativeLayout
    			android:id="@+id/tab1"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:background="@drawable/background"
    			android:orientation="vertical" >
            	<LinearLayout
            	    android:background="@drawable/canvasborder"
    				android:id="@+id/pantallasimulacio"
    				android:layout_width="fill_parent"
    				android:layout_marginTop="30dip"
    				android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
    				android:layout_height="300dp" />
				<LinearLayout
    				android:id="@+id/LinearLayout02"
    				android:layout_width="fill_parent"
    				android:layout_height="wrap_content"
    				android:layout_below="@+id/pantallasimulacio">
    				<TextView
						android:id="@+id/show_info"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:layout_marginLeft="10dp"
						android:layout_marginTop="10dp"
						android:gravity="left"
						android:text="" />		
				</LinearLayout>
			</RelativeLayout>
            <!-- Second tab -->
            <!-- inicia el ScrollView -->
   			<LinearLayout
				android:id="@+id/tab2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
        	<ScrollView 
        	    android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
          	<LinearLayout
				android:id="@+id/insidetab2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/grow_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/grow_txt1" />
				<EditText
					android:id="@+id/grow_edit1"
					android:hint="@string/grow_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/grow_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/grow_txt2" />
				<EditText
					android:id="@+id/grow_edit2"
					android:hint="@string/grow_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/rain_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/rain_txt1" />
				<EditText
					android:id="@+id/rain_edit1"
					android:hint="@string/rain_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/rain_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/rain_txt2" />
				<EditText
					android:id="@+id/rain_edit2"
					android:hint="@string/rain_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/rain_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/rain_txt3" />
				<EditText
					android:id="@+id/rain_edit3"
					android:hint="@string/rain_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/plants_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/update" 
					/>
        	</LinearLayout>
        	</ScrollView>
        	</LinearLayout>
        	<!-- Third tab -->
          	<!-- inicia el ScrollView -->
          	<LinearLayout
				android:id="@+id/tab3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
        	<ScrollView 
        	    android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
          	<LinearLayout
				android:id="@+id/insidetab3"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/specie1_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt1" />
				<EditText
					android:id="@+id/specie1_edit1"
					android:hint="@string/specie_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/specie1_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt2" />
				<EditText
					android:id="@+id/specie1_edit2"
					android:hint="@string/specie_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/specie1_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt3" />
				<EditText
					android:id="@+id/specie1_edit3"
					android:hint="@string/specie_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/specie1_txt4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt4" />
				<EditText
					android:id="@+id/specie1_edit4"
					android:hint="@string/specie_txt4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/specie1_txt5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt5" />
				<EditText
					android:id="@+id/specie1_edit5"
					android:hint="@string/specie_txt5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/specie1_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/update" 
					/>
        	</LinearLayout>
        	</ScrollView>
        	</LinearLayout>
        	<!-- Fourth tab -->
        	<!-- inicia el ScrollView -->
        	<LinearLayout
				android:id="@+id/tab4"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
        	<ScrollView 
        	    android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
        	<LinearLayout
				android:id="@+id/insidetab4"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/specie2_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt1" />
				<EditText
					android:id="@+id/specie2_edit1"
					android:hint="@string/specie_txt1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/specie2_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt2" />
				<EditText
					android:id="@+id/specie2_edit2"
					android:hint="@string/specie_txt2"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/specie2_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt3" />
				<EditText
					android:id="@+id/specie2_edit3"
					android:hint="@string/specie_txt3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/specie2_txt4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt4" />
				<EditText
					android:id="@+id/specie2_edit4"
					android:hint="@string/specie_txt4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<TextView
					android:id="@+id/specie2_txt5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/specie_txt5" />
				<EditText
					android:id="@+id/specie2_edit5"
					android:hint="@string/specie_txt5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					/>
				<Button
					android:id="@+id/specie2_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/update" 
					/>
        	</LinearLayout>
        	</ScrollView>
        	</LinearLayout>
        	<!-- Fifth tab -->
        	<!-- inicia el ScrollView -->
        	<LinearLayout
				android:id="@+id/tab5"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/background"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
        	<ScrollView 
        	    android:layout_width="fill_parent"
        		android:layout_height="fill_parent">
        	<LinearLayout
				android:id="@+id/insidetab5"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
				android:orientation="vertical"
				xmlns:android="http://schemas.android.com/apk/res/android">
				<TextView
					android:id="@+id/help"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/help" />
        	</LinearLayout>
        	</ScrollView>
        	</LinearLayout>
  		</FrameLayout>
   		<!-- End of tabs -->
 	</LinearLayout>
</TabHost>
